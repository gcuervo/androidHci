<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton android:id="@+id/buttonMujeres"
            android:scaleType="fitXY"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton android:id="@+id/buttonHombres"
            android:scaleType="fitXY"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/novedades" />

        <ImageButton android:id="@+id/buttonNinos"
            android:scaleType="fitXY"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/nuevo"
            android:layout_below="@+id/buttonMujeres"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    </RelativeLayout>